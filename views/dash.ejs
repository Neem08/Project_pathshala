<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="css/dash.css">
  
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
    <link href='https://fonts.googleapis.com/css?family=Playfair Display' rel='stylesheet'>
    <style media="screen">
        body{
          font-style: Times;
        }
        img{
  
        }
        .center1{
          width:600px !important;
          height: auto;
        }
        .center2{
          width:400px !important;
          height: auto;
        }
  
      </style>
<body>
<section>
  <div class="heading" >
    <h1 style="text-align: center;">Our Teachers</h1>
  </div>
  <% item.forEach(function(image) { %>
  <div class="container-fluid ">
  <div class="row polaroid1">
    <div class="col-sm-6">
      
      <img src="data:image/<%=image.img.contentType%>;base64,
      <%=image.img.data.toString('base64')%>"   class="center1 center" style="margin-top: -1vh; " width="500">

    </div>
    <div class="col-sm-6 text1" ">
      <h2 style="color: rgb(21,75,196);"><%=image.name%></h2>
      <br>
      <p >
        <strong><%=image.desc%></strong> 
      </p>
      <form action="/check" method="post">
        <input type="hidden" name="name" id="" value="<%=image.name%>">
       <button type="submit" class="btn btn-success "name="button">Verify</button>
      </form>
    </div>
  </div>

 
</section>
<% }) %>
<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF" crossorigin="anonymous"></script>
  </body>
</html>
